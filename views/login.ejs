<%- include('initials/header.ejs', { title: 'CareFlow - Login' }) %>

<script src="/functionality/login.js" defer></script>
<link rel="stylesheet" href="/styles/login.css">

<main class="login-container">
    <div class="auth-container">
        <h2 class="card-title text-center mb-3">Welcome Back</h2>
        <p class="text-muted text-center mb-4">Sign in to continue to CareFlow</p>

        <div class="alert alert-info" role="alert">
            <h5 class="alert-heading"><i class="fas fa-user-shield me-2"></i> Demo Access</h5>
            <p class="mb-1 small">Explore the patient dashboard with these credentials:</p>
            <hr>
            <p class="demo-heads "><Strong>Patient Credentials:</Strong></p>
            <p class="mb-0"><strong>Email:</strong> <code>patient@gmail.com</code></p>
            <p class="mb-0"><strong>Password:</strong> <code>Patient@10</code></p>
            <p class="demo-heads"><Strong>Admin Credentials:</Strong></p>
            <p class="mb-0"><strong>Email:</strong> <code>admin@gmail.com</code></p>
            <p class="mb-0"><strong>Password:</strong> <code>Admin@10</code></p>
            <p class="demo-heads"><Strong>Doctor Credentials:</Strong></p>
            <p class="mb-0"><strong>Email:</strong> <code>doctor@gmail.com</code></p>
            <p class="mb-0"><strong>Password:</strong> <code>Doctor@10</code></p>
        </div>

        <form action="/login" method="POST" id="loginForm" autocomplete="on" novalidate>
            <div class="form-row">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" type="email" class="form-control" required autocomplete="email" placeholder="you@example.com">
            </div>

            <div class="form-row">
                <label for="password" class="form-label">Password</label>
                <div class="input-with-icon">
                    <input id="password" name="password" type="password" class="form-control" required autocomplete="current-password" placeholder="Enter password">
                    <button type="button" class="pw-toggle-icon" data-target="password" aria-label="Toggle password visibility" title="Show / hide password">
                        <svg class="icon-eye" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7S1 12 1 12z" stroke="currentColor" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"></path><circle cx="12" cy="12" r="3" fill="currentColor"></circle></svg>
                        <svg class="icon-eye-off" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M1 1l22 22" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                    </button>
                </div>
            </div>

            <div class="form-actions mt-4">
                <button type="submit" class="btn btn-primary w-100 btn-lg">Sign In</button>
            </div>

            <div class="divider"><span>or</span></div>

            <div class="socials">
                <button type="button" class="btn btn-social btn-google"><i class="fab fa-google me-2"></i> Sign in with Google</button>
                <button type="button" class="btn btn-social btn-apple"><i class="fab fa-apple me-2"></i> Sign in with Apple</button>
            </div>

            <p class="text-center mt-4">Don't have an account? <a href="/signup" class="link-primary">Sign Up</a></p>
        </form>
    </div>
</main>

<%- include('initials/footer.ejs') %>