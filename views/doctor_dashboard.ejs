<%- include('initials/header.ejs', { title: 'Doctor Dashboard' }) %>
<link rel="stylesheet" href="/styles/doctor_dashboard.css">
    <div class="container py-5">
        <h2 class="mb-2 text-primary">Dr. <%= doctorName %>'s Dashboard</h2>
        <p class="lead text-muted mb-5">Today's Appointments - <%= new Date().toDateString() %></p>

        <% if (appointments.length > 0) { %>
            <div class="appointment-list">
                <% appointments.forEach(appt => { %>
                    <div class="appointment-card card shadow-sm mb-3 animate-on-scroll animate-slide-up">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="time-block text-center me-4">
                                    <span class="fw-bold fs-5"><%= new Date('1970-01-01T' + appt.appointment_time).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %></span>
                                </div>
                                <div>
                                    <h5 class="mb-0"><%= appt.patient_name %></h5>
                                    <small class="text-muted">Status: 
                                        <% 
                                            let statusClass = 'secondary';
                                            if (appt.status === 'Confirmed') statusClass = 'success';
                                            if (appt.status === 'Pending') statusClass = 'warning';
                                        %>
                                        <span class="badge bg-<%= statusClass %>"><%= appt.status %></span>
                                    </small>
                                </div>
                            </div>
                            <div class="actions">
                                <a href="#" class="btn btn-sm btn-outline-primary">View Record</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-success text-center mt-4" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                You have no more appointments scheduled for today.
            </div>
        <% } %>
    </div>
<%- include('initials/footer.ejs') %>