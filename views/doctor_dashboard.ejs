<%- include('initials/header.ejs', { title: 'Doctor Dashboard' }) %>
<link rel="stylesheet" href="/styles/doctor_dashboard.css">
    <div class="container py-5">
        <h2 class="mb-2 text-primary">Dr. <%= doctorName %>'s Dashboard</h2>
        <p class="lead text-muted mb-5">View and manage your patient schedule.</p>

        <h4 class="date-header mt-4 mb-3">
            <i class="fas fa-calendar-day me-2"></i>
            Upcoming & Today's Appointments
        </h4>
        <div class="appointment-list">
            <% if (upcomingAppointments.length > 0) { %>
                <% upcomingAppointments.forEach(appt => { %>
                    <div class="appointment-card card shadow-sm mb-3 animate-on-scroll animate-slide-up">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="time-block text-center me-4">
                                    <span class="fw-bold"><%= new Date(appt.appointment_date).toLocaleDateString([], { month: 'short', day: 'numeric' }) %></span>
                                    <span class="fw-bold fs-5"><%= new Date('1970-01-01T' + appt.appointment_time).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %></span>
                                </div>
                                <div>
                                    <h5 class="mb-0"><%= appt.patient_name %></h5>
                                    <small class="text-muted">Status: 
                                        <% 
                                            let statusClass = 'secondary';
                                            if (appt.status === 'Confirmed') statusClass = 'success';
                                            if (appt.status === 'Pending') statusClass = 'warning';
                                        %>
                                        <span class="badge bg-<%= statusClass %>"><%= appt.status %></span>
                                    </small>
                                </div>
                            </div>
                            <div class="actions">
                                <a href="/doctor/appointment/<%= appt.id %>" class="btn btn-sm btn-outline-primary">View Record</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="alert alert-success text-center" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    You have no upcoming appointments scheduled.
                </div>
            <% } %>
        </div>

        <hr class="my-5">

        <h4 class="date-header mt-4 mb-3">
            <i class="fas fa-history me-2"></i>
            Past Appointments
        </h4>
        <div class="appointment-list">
            <% if (pastAppointments.length > 0) { %>
                <% pastAppointments.forEach(appt => { %>
                    <div class="appointment-card past-appointment card shadow-sm mb-3 animate-on-scroll animate-slide-up">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="time-block text-center me-4">
                                     <span class="fw-bold"><%= new Date(appt.appointment_date).toLocaleDateString([], { month: 'short', day: 'numeric' }) %></span>
                                    <span class="fw-bold fs-5"><%= new Date('1970-01-01T' + appt.appointment_time).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %></span>
                                </div>
                                <div>
                                    <h5 class="mb-0"><%= appt.patient_name %></h5>
                                    <small class="text-muted">Status: 
                                        <% 
                                            let statusClass = 'secondary';
                                            if (appt.status === 'Completed') statusClass = 'success';
                                            if (appt.status === 'Canceled') statusClass = 'danger';
                                        %>
                                        <span class="badge bg-<%= statusClass %>"><%= appt.status || 'Unknown' %></span>
                                    </small>
                                </div>
                            </div>
                            <div class="actions">
                                <a href="/doctor/appointment/<%= appt.id %>" class="btn btn-sm btn-outline-secondary">View Record</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="alert alert-info text-center" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    No past appointment history found.
                </div>
            <% } %>
        </div>
    </div>
<%- include('initials/footer.ejs') %>