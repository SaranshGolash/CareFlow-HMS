<%- include('initials/header.ejs', { title: 'CareFlow HMS' }) %>
<link rel="stylesheet" href="/styles/appointments.css">
</head>
<body>
    <section class="table-body">
        <div class="container py-5">
            <h2 class="text-center mb-4 text-primary">
                <i class="fas fa-user-md me-2"></i>Doctor Appointments
            </h2>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-primary">
                        <tr>
                            <th scope="col">Patient Name</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Doctor Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof appointments !== 'undefined' && appointments.length > 0) { %>
                            <% for (let appointment of appointments) { %>
                                <tr>
                                    <td><%= appointment.patient_name %></td>
                                    <td><%= appointment.gender %></td>
                                    <td><%= appointment.phone %></td>
                                    <td><%= appointment.doctor_name %></td>
                                </tr>
                            <% } %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center">No appointments found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <div class="entry">
                    <button id="new-entry">New Appointment</button>
                </div>
            </div>
        </div>
    </section>
<%- include('initials/footer.ejs') %>
</body>
</html>