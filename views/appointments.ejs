<%- include('initials/header.ejs', { title: 'CareFlow - Appointments' }) %>
<link rel="stylesheet" href="/styles/appointments.css">
    <div class="container py-5">
        <h2 class="mb-4">Appointments</h2>

        <% if (appointments.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Patient Name</th>
                        <th>Gender</th>
                        <th>Phone</th>
                        <th>Doctor Name</th>
                    </tr>
                </thead>
                <tbody>
                    <% appointments.forEach(appointment => { %>
                    <tr>
                        <td><%= appointment.patient_name %></td>
                        <td><%= appointment.gender %></td>
                        <td><%= appointment.phone %></td>
                        <td><%= appointment.doctor_name %></td>
                        <td>
                            <a href="/teleconsultation/<%= appointment.id %>" class="btn btn-success btn-sm" onclick="window.location.href='/teleconsultation'">
                            <i class="fas fa-video me-1"></i> Start Call
                        </a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No appointments found.</p>
        <% } %>
        <!-- Button to Add New Appointment -->
        <div class="entry">
            <a href="/newappointments" id="new-entry" class="btn btn-primary">New Appointment</a>
        </div>
    </div>
<%- include('initials/footer.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>