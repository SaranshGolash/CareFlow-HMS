<%- include('initials/header.ejs', { title: 'Dashboard' }) %>
<link rel="stylesheet" href="/styles/dashboard.css">
</head>
<body>
    <div class="container py-5">
        <h2 class="mb-5 text-primary nimate-load-slide-up" style="animation-delay: 0.1s;">
            Welcome, <%= user.username %>!
        </h2>

        <% if (user.role === 'admin') { %>
            <!-- Admin Alert Section (Low Stock) -->
            <% if (lowStockCount > 0) { %>
                <div class="alert alert-danger d-flex justify-content-between align-items-center fw-bold animate-load-slide-up" role="alert" style="animation-delay: 0.2s;">
                    <span>
                        <i class="fas fa-exclamation-triangle me-2"></i> 
                        ACTION REQUIRED: <%= lowStockCount %> item<%= lowStockCount !== 1 ? 's' : '' %> are below the safety stock threshold!
                    </span>
                    <a href="/inventory" class="btn btn-sm btn-danger-outline text-dark bg-white shadow-sm">View Inventory</a>
                </div>
            <% } else { %>
                <div class="alert alert-warning animate-load-slide-up" role="alert" style="animation-delay: 0.2s;">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    You are logged in as an **Administrator**. Use the navigation bar or links below for management.
                </div>
            <% } %>
            
            <!-- ADMIN QUICK ACCESS BLOCK (Analytics Button Bar) -->
            <div class="row mb-5 animate-on-scroll animate-slide-up">
                <div class="col-12">
                    <h3 class="mb-3 text-dark">Admin Quick Access</h3>
                    
                    <div class="admin-quick-access-bar card shadow-md p-3 bg-primary" 
                         onclick="window.location.href='/admin/analytics'">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="text-white">
                                <i class="fas fa-chart-bar fa-2x me-3"></i>
                                <span class="fs-5 fw-bold">Jump to Financial and Operational Analytics</span>
                            </div>
                            <i class="fas fa-arrow-right fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Process Reminders Card/Button -->
                <div class="col-md-6 col-lg-4">
                    <div class="dashboard-card card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <i class="fas fa-paper-plane fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Communications</h5>
                            <p class="text-muted small">Process all queued appointment reminders and notifications.</p>
            
                            <!-- UPDATE: Remove form, add ID to button -->
                            <div class="mt-auto">
                                <button type="button" id="processRemindersBtn" class="btn btn-primary w-100">
                                    <span id="reminderBtnText">Send Email Reminders</span>
                                </button>
                            </div>
                            <div id="reminderStatus" class="small text-muted mt-2 text-center"></div>
                        </div>
                    </div>
                </div>
        <% } %>

        <h3 class="mb-4 text-dark animate-on-scroll animate-fade-in">
            <%= user.role === 'admin' ? 'Management Overview' : 'Your Activity Summary' %>
        </h3>

        <div class="row g-4">
            
            <!-- Appointments Card (Visible to all) -->
            <div class="col-md-6 col-lg-3 animate-on-scroll animate-slide-up" style="transition-delay: 0.1s;">
                <div class="dashboard-card card h-100 shadow-sm card-3d-hover" onclick="window.location.href='/appointments'">
                    <div class="card-body">
                        <i class="fas fa-calendar-check fa-3x icon-blue mb-3"></i>
                        <p class="text-uppercase text-muted mb-0 small">Appointments Booked</p>
                        <h2 class="fw-bold animate-counter" data-target-value="<%= apptCount %>"><%= apptCount %></h2>
                    </div>
                </div>
            </div>

            <!-- Medical Records Card (Visible to all) -->
            <div class="col-md-6 col-lg-3 animate-on-scroll animate-slide-up" style="transition-delay: 0.2s;">
                <div class="dashboard-card card h-100 shadow-sm card-3d-hover" onclick="window.location.href='/records'">
                    <div class="card-body">
                        <i class="fas fa-notes-medical fa-3x icon-purple mb-3"></i>
                        <p class="text-uppercase text-muted mb-0 small">Total Medical Records</p>
                        <h2 class="fw-bold animate-counter" data-target-value="<%= recordCount %>"><%= recordCount %></h2>
                    </div>
                </div>
            </div>
            
            <!-- Outstanding Balance Card (Visible to all) -->
            <div class="col-md-6 col-lg-3 animate-on-scroll animate-slide-up" style="transition-delay: 0.3s;">
                <div class="dashboard-card card h-100 shadow-sm card-3d-hover" onclick="window.location.href='/invoices'">
                    <div class="card-body">
                        <i class="fas fa-dollar-sign fa-3x <%= (outstandingBalance > 0) ? 'text-danger' : 'text-success' %> mb-3"></i>
                        <p class="text-uppercase text-muted mb-0 small">Outstanding Balance</p>
                        <h2 class="fw-bold animate-counter" data-target-value="<%= outstandingBalance %>">$<%= outstandingBalance %></h2>
                    </div>
                </div>
            </div>


            <!-- Latest Vitals Card (Visible to all) -->
            <div class="col-md-6 col-lg-3 animate-on-scroll animate-slide-up" style="transition-delay: 0.4s;">
                <div class="dashboard-card card h-100 shadow-sm card-3d-hover" onclick="window.location.href='/monitoring'">
                    <div class="card-body">
                        <i class="fas fa-heartbeat fa-3x icon-green mb-3"></i>
                        <p class="text-uppercase text-muted mb-0 small">Last Vitals Check</p>
                        <h3 class="fw-bold text-dark">
                            <% if (latestVitalDate) { %>
                                <%= new Date(latestVitalDate).toLocaleDateString() %>
                            <% } else { %>
                                N/A
                            <% } %>
                        </h3>
                    </div>
                </div>
            </div>
            
            <!-- Low Stock Card (Admin View - Placed here to integrate with the main card flow) -->
            <% if (user.role === 'admin') { %>
                <div class="col-md-6 col-lg-3 animate-on-scroll animate-slide-up" style="transition-delay: 0.5s;">
                    <div class="dashboard-card card h-100 shadow-sm card-3d-hover" onclick="window.location.href='/inventory'">
                        <div class="card-body">
                            <i class="fas fa-box-open fa-3x <%= lowStockCount > 0 ? 'text-danger' : 'icon-green' %> mb-3"></i>
                            <p class="text-uppercase text-muted mb-0 small">Low Stock Items</p>
                            <h2 class="fw-bold animate-counter" data-target-value="<%= lowStockCount %> <%= lowStockCount > 0 ? 'text-danger' : 'text-dark' %>"><%= lowStockCount %></h2>
                        </div>
                    </div>
                </div>
            <% } %>

        </div>
        
        <% if (user.role === 'user' && prescriptions) { %>
            <div class="row mt-5">
                <div class="col-12">
                    <h3 class="mb-3 text-dark">Recent Prescriptions</h3>
                    
                    <% if (prescriptions.length > 0) { %>
                        <div class="list-group shadow-sm">
                            <% prescriptions.forEach(rx => { %>
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1 text-primary"><%= rx.medication_name %></h5>
                                        <small class="text-muted">Issued: <%= new Date(rx.issued_at).toLocaleDateString() %></small>
                                    </div>
                                    <p class="mb-1"><strong>Dosage:</strong> <%= rx.dosage %> | <strong>Frequency:</strong> <%= rx.frequency %></p>
                                    <small class="text-muted">Prescribed by: Dr. <%= rx.doctor_name %></small>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i> You have no recent prescriptions on file.
                        </div>
                    <% } %>
                </div>
            </div>
        <% } %>
        
        <div class="row mt-5">
            <div class="col-12">
                <div class="card p-4 bg-light text-center">
                    <p class="lead mb-0 text-muted">Manage your profile or change your password:</p>
                    <a href="/settings" class="btn btn-primary mt-3 w-50 mx-auto">
                        <i class="fas fa-cog me-2"></i> Go to Settings
                    </a>
                </div>
            </div>
        </div>

    </div>
<%- include('initials/footer.ejs') %>
