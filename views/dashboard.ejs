<%- include('initials/header.ejs', { title: 'Dashboard' }) %>
<link rel="stylesheet" href="/styles/dashboard.css">
    <div class="container py-5">
        <h2 class="mb-5 text-primary">
            Welcome, <%= user.username %>!
        </h2>

        <% if (user.role === 'admin') { %>
            <% if (lowStockCount > 0) { %>
                <div class="alert alert-danger d-flex justify-content-between align-items-center fw-bold" role="alert">
                    <span>
                        <i class="fas fa-exclamation-triangle me-2"></i> 
                        ACTION REQUIRED: <%= lowStockCount %> item<%= lowStockCount !== 1 ? 's' : '' %> are below the safety stock threshold!
                    </span>
                    <a href="/inventory" class="btn btn-sm btn-danger-outline text-dark bg-white shadow-sm">View Inventory</a>
                </div>
            <% } else { %>
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    You are logged in as an **Administrator**. Use the navigation bar or links below for management.
                </div>
            <% } %>
        <% } %>

    <% if (user.role === 'admin') { %>
    <div class="row mb-5">
        <div class="col-12">
            <h3 class="mb-3 text-dark">Admin Quick Access</h3>
            
            <div class="admin-quick-access-bar card shadow-md p-3 bg-primary">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="text-white">
                        <i class="fas fa-chart-bar fa-2x me-3"></i>
                        <span class="fs-5 fw-bold">Jump to Financial and Operational Analytics</span>
                    </div>
                    <i class="fas fa-arrow-right fa-2x text-white-50" id="admin-analytics-access" onclick="window.location.href='/admin/analytics'"></i>
                </div>
            </div>
        </div>
    </div>
<% } %>

        <h3 class="mb-4 text-dark">
            <% if (user.role === 'admin') { %>
                Management Overview
            <% } else { %>
                Your Activity Summary
            <% } %>
        </h3>

        <div class="row g-4">
            
            <div class="col-md-6 col-lg-3">
                <div class="dashboard-card card h-100 shadow-sm" onclick="window.location.href='/appointments'">
                    <div class="card-body">
                        <i class="fas fa-calendar-check fa-3x icon-blue mb-3"></i>
                        <p class="text-uppercase text-muted mb-0 small">Appointments Booked</p>
                        <h2 class="fw-bold"><%= apptCount %></h2>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="dashboard-card card h-100 shadow-sm" onclick="window.location.href='/records'">
                    <div class="card-body">
                        <i class="fas fa-notes-medical fa-3x icon-purple mb-3"></i>
                        <p class="text-uppercase text-muted mb-0 small">Total Medical Records</p>
                        <h2 class="fw-bold"><%= recordCount %></h2>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 col-lg-3">
                <div class="dashboard-card card h-100 shadow-sm" onclick="window.location.href='/invoices'">
                    <div class="card-body">
                        <i class="fas fa-dollar-sign fa-3x <%= (outstandingBalance > 0) ? 'text-danger' : 'text-success' %> mb-3"></i>
                        <p class="text-uppercase text-muted mb-0 small">Outstanding Balance</p>
                        <h2 class="fw-bold">$<%= outstandingBalance %></h2>
                    </div>
                </div>
            </div>


            <div class="col-md-6 col-lg-3">
                <div class="dashboard-card card h-100 shadow-sm" onclick="window.location.href='/monitoring'">
                    <div class="card-body">
                        <i class="fas fa-heartbeat fa-3x icon-green mb-3"></i>
                        <p class="text-uppercase text-muted mb-0 small">Last Vitals Check</p>
                        <h3 class="fw-bold text-dark">
                            <% if (latestVitalDate) { %>
                                <%= new Date(latestVitalDate).toLocaleDateString() %>
                            <% } else { %>
                                N/A
                            <% } %>
                        </h3>
                    </div>
                </div>
            </div>
            
            <% if (user.role === 'admin') { %>
                <div class="col-md-6 col-lg-3">
                    <div class="dashboard-card card h-100 shadow-sm" onclick="window.location.href='/inventory'">
                        <div class="card-body">
                            <i class="fas fa-box-open fa-3x <%= lowStockCount > 0 ? 'text-danger' : 'icon-green' %> mb-3"></i>
                            <p class="text-uppercase text-muted mb-0 small">Low Stock Items</p>
                            <h2 class="fw-bold <%= lowStockCount > 0 ? 'text-danger' : 'text-dark' %>"><%= lowStockCount %></h2>
                        </div>
                    </div>
                </div>
            <% } %>

        </div>
        
        <div class="row mt-5">
            <div class="col-12">
                <div class="card p-4 bg-light text-center">
                    <p class="lead mb-0 text-muted">Manage your profile or change your password:</p>
                    <a href="/settings" class="btn btn-primary mt-3 w-50 mx-auto">
                        <i class="fas fa-cog me-2"></i> Go to Settings
                    </a>
                </div>
            </div>
        </div>

    </div>
<%- include('initials/footer.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>