<%- include('initials/header.ejs', { title: 'Dashboard - CareFlow' }) %>
<link rel="stylesheet" href="/styles/dashboard.css">
    <div class="container py-5">
        <h2 class="mb-5 text-primary">
            Welcome, <%= user.username %>!
        </h2>

        <% if (user.role === 'admin') { %>
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                You are logged in as an **Administrator**. Use the navigation bar to access admin tools.
            </div>
        <% } %>

        <h3 class="mb-4 text-dark">Your Activity Summary</h3>

        <div class="row g-4">
            
            <!-- Appointments Card -->
            <div class="col-md-6 col-lg-4">
                <div class="dashboard-card card h-100 shadow-sm" onclick="window.location.href='/appointments'">
                    <div class="card-body">
                        <i class="fas fa-calendar-check fa-3x icon-blue mb-3"></i>
                        <p class="text-uppercase text-muted mb-0 small">Appointments Booked</p>
                        <h2 class="fw-bold"><%= apptCount %></h2>
                    </div>
                </div>
            </div>

            <!-- Medical Records Card -->
            <div class="col-md-6 col-lg-4">
                <div class="dashboard-card card h-100 shadow-sm" onclick="window.location.href='/records'">
                    <div class="card-body">
                        <i class="fas fa-notes-medical fa-3x icon-purple mb-3"></i>
                        <p class="text-uppercase text-muted mb-0 small">Total Medical Records</p>
                        <h2 class="fw-bold"><%= recordCount %></h2>
                    </div>
                </div>
            </div>

            <!-- Latest Vitals Card -->
            <div class="col-md-6 col-lg-4">
                <div class="dashboard-card card h-100 shadow-sm" onclick="window.location.href='/monitoring'">
                    <div class="card-body">
                        <i class="fas fa-heartbeat fa-3x icon-green mb-3"></i>
                        <p class="text-uppercase text-muted mb-0 small">Last Vitals Check</p>
                        <h3 class="fw-bold text-dark">
                            <% if (latestVitalDate) { %>
                                <%= new Date(latestVitalDate).toLocaleDateString() %>
                            <% } else { %>
                                N/A
                            <% } %>
                        </h3>
                    </div>
                </div>
            </div>
            
        </div>
        
        <div class="row mt-5">
            <div class="col-12">
                <div class="card p-4 bg-light text-center">
                    <p class="lead mb-0 text-muted">Manage your profile or change your password:</p>
                    <a href="/settings" class="btn btn-primary mt-3 w-50 mx-auto">
                        <i class="fas fa-cog me-2"></i> Go to Settings
                    </a>
                </div>
            </div>
        </div>

    </div>
<%- include('initials/footer.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>