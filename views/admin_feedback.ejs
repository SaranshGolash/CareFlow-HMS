<%- include('initials/header.ejs', { title: 'Feedback View' }) %>
<link rel="stylesheet" href="/styles/admin_feedback.css">
    <div class="container py-5">
        <h2 class="mb-4 text-primary"><i class="fas fa-chart-bar me-3"></i> Patient Consultation Feedback</h2>
        <p class="text-muted lead">Total Feedback Entries: **<%= feedback.length %>**</p>
        
        <% if (feedback.length > 0) { %>
            <div class="row g-4 mt-3">
                <% feedback.forEach(entry => { %>
                    <div class="col-md-6">
                        <div class="card shadow-sm feedback-card-item">
                            <div class="card-header bg-light d-flex justify-content-between">
                                <span class="fw-bold text-dark">
                                    <i class="fas fa-user-circle me-1"></i> <%= entry.username %>
                                </span>
                                <small class="text-muted">
                                    Submitted: <%= new Date(entry.submitted_at).toLocaleDateString() %>
                                </small>
                            </div>
                            <div class="card-body">
                                
                                <p class="mb-1">
                                    <strong>Rating:</strong> 
                                    <span class="rating-stars text-warning"><i class="fas fa-star"></i><%= entry.star_rating %></span>
                                </p>
                                <p class="mb-2">
                                    <strong>Consultation Effective?</strong> 
                                    <span class="badge bg-<%= entry.effectiveness_rating === 'yes' ? 'success' : 'danger' %>">
                                        <%= entry.effectiveness_rating.toUpperCase() %>
                                    </span>
                                </p>
                                
                                <h6 class="mt-3 text-primary">Comments:</h6>
                                <p class="card-text border p-2 rounded small fst-italic">
                                    <%= entry.comments || 'No specific comments provided.' %>
                                </p>
                                
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center mt-4" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                No consultation feedback has been submitted yet.
            </div>
        <% } %>
    </div>
<%- include('initials/footer.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>