<%- include('initials/header.ejs', { title: 'Patient Record History' }) %>
<link rel="stylesheet" href="/styles/records.css"> </head>
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="mb-1 text-primary">Patient Medical History</h2>
                <p class="lead text-muted">Viewing all records for: <strong><%= patientName %></strong></p>
            </div>
            <a href="/doctor/dashboard" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Dashboard</a>
        </div>


        <% if (records.length > 0) { %>
            <div class="row g-4">
                <% records.forEach(record => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0 animate-on-scroll animate-slide-up">
                            <div class="card-header bg-primary text-white">
                                <i class="fas fa-file-medical me-2"></i> Record ID: <%= record.record_id %>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title text-dark mb-3">Diagnosis: <%= record.diagnosis %></h5>
                                <p class="card-text text-muted mb-1">
                                    <i class="fas fa-calendar-alt me-2"></i>
                                    <strong>Date:</strong> <%= new Date(record.record_date).toLocaleDateString() %>
                                </p>
                                <p class="card-text mb-2">
                                    <i class="fas fa-user-md me-2 text-info"></i>
                                    <strong>Doctor:</strong> <%= record.doctor_name || 'N/A' %>
                                </p>
                            </div>
                            <div class="card-footer bg-light border-0 text-end">
                                <a href="/doctor/record/<%= record.record_id %>" class="btn btn-sm btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info mt-4" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                No medical records have been created for this patient yet.
            </div>
        <% } %>
    </div>
<%- include('initials/footer.ejs') %>