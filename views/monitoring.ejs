<%- include('initials/header.ejs', { title: 'Health Monitoring' }) %>
<link rel="stylesheet" href="/styles/monitoring.css">
    <div class="container py-5">
        <h2 class="mb-4 text-primary">
            <% if (username) { %>
                <%= username %>'s 
            <% } %>
            Health Dashboard
        </h2>

        <% if (latest) { %>
        <div class="row g-4 mb-5">
            <div class="col-md-6 col-lg-3">
                <div class="monitor-card card h-100 bg-light-blue shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-heartbeat fa-2x text-primary me-3"></i>
                            <div>
                                <p class="text-uppercase text-muted mb-0 small">Heart Rate (BPM)</p>
                                <h4 class="fw-bold mb-0 text-dark"><%= latest.heart_rate || 'N/A' %></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 col-lg-3">
                <div class="monitor-card card h-100 bg-light-purple shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-thermometer-half fa-2x text-info me-3"></i>
                            <div>
                                <p class="text-uppercase text-muted mb-0 small">Temperature (°C)</p>
                                <h4 class="fw-bold mb-0 text-dark"><%= latest.temperature || 'N/A' %></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="monitor-card card h-100 bg-light-green shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-lungs fa-2x text-success me-3"></i>
                            <div>
                                <p class="text-uppercase text-muted mb-0 small">SpO2 (%)</p>
                                <h4 class="fw-bold mb-0 text-dark"><%= latest.spo2 || 'N/A' %></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 col-lg-3">
                <div class="monitor-card card h-100 bg-light-red shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-tint fa-2x text-danger me-3"></i>
                            <div>
                                <p class="text-uppercase text-muted mb-0 small">BP (Systolic/Diastolic)</p>
                                <h4 class="fw-bold mb-0 text-dark">
                                    <%= latest.systolic_bp || 'N/A' %> / <%= latest.diastolic_bp || 'N/A' %>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h3 class="mb-3 text-dark">Historical Trends</h3>
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="card shadow-sm monitor-chart">
                    <div class="card-header bg-light-primary fw-bold text-dark">
                        Heart Rate & Blood Pressure Trend (Placeholder for Chart)
                    </div>
                    <div class="card-body text-center py-5">
                        <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Chart Integration Placeholder. Connect Chart.js or D3.js here to display trend data.</p>
                        </div>
                </div>
            </div>
        </div>

        <h3 class="mb-3 mt-5 text-dark">Recent Readings</h3>
        <div class="table-responsive monitor-table">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Time</th>
                        <th>Heart Rate (BPM)</th>
                        <th>Temp (°C)</th>
                        <th>SpO2 (%)</th>
                        <th>BP (Sys/Dia)</th>
                        <th>Glucose</th>
                    </tr>
                </thead>
                <tbody>
                    <% vitals.forEach(vital => { %>
                        <tr>
                            <td><%= new Date(vital.reading_timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %></td>
                            <td><%= vital.heart_rate || '-' %></td>
                            <td><%= vital.temperature || '-' %></td>
                            <td><%= vital.spo2 || '-' %></td>
                            <td><%= (vital.systolic_bp || '-') + '/' + (vital.diastolic_bp || '-') %></td>
                            <td><%= vital.glucose_level || '-' %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <% } else { %>
            <div class="alert alert-info mt-4" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                No health vital data found for your account.
            </div>
        <% } %>

        <div class="mt-4 text-center">
             <% if (user && user.role === 'admin') { %>
                <a href="/add-vitals" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus-circle me-2"></i> Manually Add Vitals
                </a>
            <% } %>
        </div>
    </div>
<%- include('initials/footer.ejs') %>
</body>
</html>