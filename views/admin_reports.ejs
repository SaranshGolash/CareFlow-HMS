<%- include('initials/header.ejs', { title: 'Financial Reports' }) %>
<link rel="stylesheet" href="/styles/admin_reports.css">
<div class="container py-5">
    <h2 class="mb-4 text-primary animate-load-slide-up" style="animation-delay: 0.1s;"><i class="fas fa-file-invoice-dollar me-3"></i> Financial Reports</h2>
    <p class="lead text-muted mb-4 animate-load-slide-up" style="animation-delay: 0.2s;">Generate financial summaries for specific date ranges.</p>

    <div class="card shadow-sm mb-4 report-card animate-on-scroll animate-slide-up" style="transition-delay: 0.1s;">
        <div class="card-body d-flex flex-wrap gap-3 align-items-end">
            <div class="flex-grow-1">
                <label for="startDate" class="form-label">Start Date</label>
                <input type="date" id="startDate" class="form-control">
            </div>
            <div class="flex-grow-1">
                <label for="endDate" class="form-label">End Date</label>
                <input type="date" id="endDate" class="form-control">
            </div>
            <button id="generateReportBtn" class="btn btn-primary btn-lg">
                <i class="fas fa-cogs me-2"></i> Generate Report
            </button>
        </div>
    </div>

    <div id="reportStatus" class="mt-4"></div>

    <div id="reportResultsContainer" class="animate-on-scroll animate-slide-up" style="display: none;">
        <h3 class="mb-3 text-dark">Report Summary</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="analytics-card card h-100 shadow-sm bg-light-blue card-3d-hover">
                    <div class="card-body">
                        <i class="fas fa-file-invoice-dollar fa-2x text-primary mb-2"></i>
                        <p class="text-uppercase text-muted mb-0 small">Total Billed (from Invoices)</p>
                        <h4 class="fw-bold" id="totalBilled">$0.00</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="analytics-card card h-100 shadow-sm bg-light-green card-3d-hover">
                    <div class="card-body">
                        <i class="fas fa-hand-holding-usd fa-2x text-success mb-2"></i>
                        <p class="text-uppercase text-muted mb-0 small">Total Collected (from Invoices)</I></p>
                        <h4 class="fw-bold" id="totalCollected">$0.00</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="analytics-card card h-100 shadow-sm bg-light-purple card-3d-hover">
                    <div class="card-body">
                        <i class="fas fa-wallet fa-2x text-purple mb-2"></i>
                        <p class="text-uppercase text-muted mb-0 small">Total Deposits (to Wallet)</p>
                        <h4 class="fw-bold" id="totalDeposits">$0.00</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('initials/footer.ejs') %>