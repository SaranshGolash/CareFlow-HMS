<%- include('initials/header.ejs', { title: 'CareFlow - New Appointment' }) %>
<link rel="stylesheet" href="/styles/newappointments.css">
    <section class="vanta-topology-bg">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <% if (success_msg) { %>
                    <div class="alert alert-success"><%= success_msg %></div>
                <% } %>
                <% if (error_msg) { %>
                    <div class="alert alert-danger"><%= error_msg %></div>
                <% } %>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title mb-4 text-primary">Book a New Appointment</h3>

                        <form action="/newappointments" method="POST" class="card row g-3">
                            <div class="col-md-6">
                                <label for="patientName" class="form-label">Patient Name<span class="required-asterisk">*</span>:</label>
                                <input id="patientName" name="patient_name" type="text" class="form-control" required placeholder="Full name">
                            </div>

                            <div class="col-md-6">
                                <label for="gender" class="form-label">Gender<span class="required-asterisk">*</span>:</label>
                                <select id="gender" name="gender" class="form-select" required>
                                    <option value="" disabled selected>Select gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label for="phone" class="form-label">Phone Number<span class="required-asterisk">*</span>:</label>
                                <input id="phone" name="phone" type="tel" inputmode="numeric" pattern="[0-9]{7,15}" class="form-control" required placeholder="e.g. 9876543210" aria-describedby="phoneHelp">
                                <div id="phoneHelp" class="form-text">Numbers only, 7â€“15 digits.</div>
                            </div>

                            <div class="col-md-6">
                                <label for="doctor_id" class="form-label">Doctor Name<span class="required-asterisk">*</span></label>
                                <select id="doctor_id" name="doctor_id" class="form-select" required onchange="this.form.doctor_name.value=this.options[this.selectedIndex].text">
                                <option value="" disabled selected>Select doctor</option>
                                    <% if (doctors && doctors.length > 0) { %>
                                        <% doctors.forEach(doctor => { %>
                                            <option value="<%= doctor.id %>"><%= doctor.username %></option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <input type="hidden" name="doctor_name" value="">
                            </div>


                            <div class="col-md-6">
                                <label for="appointment_date" class="form-label">Date<span class="required-asterisk">*</span>:</label>
                                <input id="appointment_date" name="appointment_date" type="date" class="form-control" required>
                            </div>

                            <div class="col-md-6">
                                <label for="appointment_time" class="form-label">Time<span class="required-asterisk">*</span>:</label>
                                <input id="appointment_time" name="appointment_time" type="time" class="form-control" required>
                            </div>

                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary">Request Appointment</button>
                                <a href="#" onclick="window.location.href='/appointments'" class="btn btn-light ms-2">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
    </section>
<%- include('initials/footer.ejs') %>