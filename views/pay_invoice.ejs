<%- include('initials/header.ejs', { title: 'Process Payment' }) %>
<link rel="stylesheet" href="/styles/pay_invoice.css">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-md invoice-detail-card">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i> Invoice #<%= invoice.invoice_id %></h4>
                        <span class="badge bg-<%= invoice.status === 'Paid' ? 'success' : (invoice.status === 'Pending' ? 'warning' : 'danger') %> fs-6">
                            <%= invoice.status.toUpperCase() %>
                        </span>
                    </div>

                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <p class="mb-1 text-muted"><strong>Billed To:</strong> <%= user.username %></p>
                                <p class="mb-1 text-muted"><strong>Email:</strong> <%= user.email %></p>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <p class="mb-1"><strong>Date Issued:</strong> <%= new Date(invoice.invoice_date).toLocaleDateString() %></p>
                                <p class="mb-1"><strong>Due Date:</strong> <span class="text-danger"><%= new Date(invoice.due_date).toLocaleDateString() %></span></p>
                            </div>
                        </div>

                        <h5 class="mb-3">Itemized Services</h5>
                        <table class="table table-bordered table-striped item-table">
                            <thead>
                                <tr>
                                    <th>Service</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Cost</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% items.forEach(item => { %>
                                <tr>
                                    <td><%= item.service_name %></td>
                                    <td class="text-center"><%= item.quantity %></td>
                                    <td class="text-end">$<%= item.cost_per_unit %></td>
                                    <td class="text-end fw-bold">$<%= (item.cost_per_unit * item.quantity).toFixed(2) %></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                        
                        <% const outstanding = (invoice.total_amount - invoice.amount_paid).toFixed(2); %>

                        <div class="row justify-content-end mt-4">
                            <div class="col-md-6">
                                <ul class="list-group list-group-flush summary-list">
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Total Billed:</span> <span class="fw-bold">$<%= invoice.total_amount.toFixed(2) %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between text-success">
                                        <span>Amount Paid:</span> <span class="fw-bold">-$<%= invoice.amount_paid.toFixed(2) %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between bg-warning text-dark fs-5">
                                        <span>Outstanding Balance:</span> <span class="fw-bold">$<%= outstanding %></span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer bg-light p-4">
                        <% if (outstanding > 0) { %>
                            <div class="wallet-payment-section mb-4">
                                <h5 class="mb-3 text-primary">1. Pay with your Wallet</h5>
                                <% if (walletBalance >= outstanding) { %>
                                    <form action="/invoices/<%= invoice.invoice_id %>/pay-with-wallet" method="POST">
                                        <input type="hidden" name="outstanding_balance" value="<%= outstanding %>">
                                        <p>Your wallet balance: <strong class="text-success">$<%= walletBalance.toFixed(2) %></strong></p>
                                        <button type="submit" class="btn btn-success btn-lg w-100">
                                            <i class="fas fa-wallet me-2"></i> Pay $<%= outstanding %> Instantly from Wallet
                                        </button>
                                    </form>
                                <% } else { %>
                                    <div class="alert alert-warning small">
                                        <p class="fw-bold mb-1">Insufficient Wallet Funds</p>
                                        <p class="mb-0">Your balance is $<%= walletBalance.toFixed(2) %>, but $<%= outstanding %> is required.</p>
                                        <a href="/wallet" class="alert-link">Add funds to your wallet?</a>
                                    </div>
                                <% } %>
                            </div>

                            <div class="divider"><span>or</span></div>

                                <div class="gateway-payment-section mt-4 animate-on-scroll animate-slide-up">

                                    <h5 class="mb-3 text-primary">2. Pay with Card or UPI</h5>
    
                                    <div class="nav nav-pills payment-tabs" id="v-pills-tab" role="tablist">
                                        <button class="nav-link active" id="v-pills-card-tab" data-bs-toggle="pill" data-bs-target="#v-pills-card" type="button" role="tab">
                                            <i class="fas fa-credit-card me-2"></i> Card (Debit/Credit)
                                        </button>
                                        <button class="nav-link" id="v-pills-upi-tab" data-bs-toggle="pill" data-bs-target="#v-pills-upi" type="button" role="tab">
                                            <i class="fas fa-qrcode me-2"></i> UPI / QR Code
                                        </button>
                                    </div>
    
                                    <div class="tab-content mt-3" id="v-pills-tabContent">
        
                                        <div class="tab-pane fade show active" id="v-pills-card" role="tabpanel">
                                            <h6 class="text-muted mb-3">Enter card details (Mock Form)</h6>
            
                                            <form action="/pay-invoice" method="POST" class="row g-3">
                                                <input type="hidden" name="invoice_id" value="<%= invoice.invoice_id %>">
                                                <input type="hidden" name="outstanding_balance" value="<%= outstanding %>">

                                                <div class="col-12 animate-load-slide-up" style="animation-delay: 0.1s;">
                                                    <label for="payment_amount_card" class="form-label">Amount to Pay</label>
                                                    <div class="input-group">
                                                        <span class="input-group-text">$</span>
                                                        <input type="number" id="payment_amount_card" name="payment_amount" class="form-control" 
                                                            value="<%= outstanding %>" min="0.01" max="<%= outstanding %>" step="0.01" required>
                                                    </div>
                                                </div>

                                                <div class="col-12 animate-load-slide-up" style="animation-delay: 0.2s;">
                                                    <label for="card_number" class="form-label">Card Number</label>
                                                    <input type="text" id="card_number" class="form-control" placeholder="4242 4242 4242 4242" required>
                                                </div>
                
                                                <div class="col-md-6 animate-load-slide-up" style="animation-delay: 0.3s;">
                                                    <label for="card_expiry" class="form-label">Expiry (MM/YY)</label>
                                                    <input type="text" id="card_expiry" class="form-control" placeholder="12/28" required>
                                                </div>
                                                <div class="col-md-6 animate-load-slide-up" style="animation-delay: 0.4s;">
                                                    <label for="card_cvv" class="form-label">CVV</label>
                                                    <input type="text" id="card_cvv" class="form-control" placeholder="123" required>
                                                </div>

                                                <div class="col-12 mt-4 animate-load-slide-up" style="animation-delay: 0.5s;">
                                                    <button type="submit" class="btn btn-primary w-100 btn-lg">
                                                        <i class="fas fa-lock me-2"></i> Pay $<%= outstanding %>
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
        
                                        <div class="tab-pane fade" id="v-pills-upi" role="tabpanel">
                                            <h6 class="text-muted mb-3">Scan to Pay or use UPI ID (Mock)</h6>
            
                                            <div class="text-center p-3 bg-white border rounded animate-load-slide-up" style="animation-delay: 0.1s;">
                                                <img src="https://api.qrserver.com/v1/create-qr-code/?size=180x180&data=upi://pay?pa=careflow@okhdfcbank&pn=CareFlow%20HMS&am=<%= outstanding %>&cu=USD" alt="Mock QR Code" class="img-fluid mb-3">
                                                <p class="small text-muted mb-1">Or pay to UPI ID:</p>
                                                <code class="fw-bold">careflow@okhdfcbank</code>
                                            </div>
            
                                            <form action="/pay-invoice" method="POST" class="mt-3 animate-load-slide-up" style="animation-delay: 0.2s;">
                                                <input type="hidden" name="invoice_id" value="<%= invoice.invoice_id %>">
                                                <input type="hidden" name="outstanding_balance" value="<%= outstanding %>">
                                                <input type="hidden" name="payment_amount" value="<%= outstanding %>"> 
                
                                                <button type="submit" class="btn btn-success w-100 btn-lg">
                                                    <i class="fas fa-check-circle me-2"></i> I have paid (Confirm Payment)
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                        <% } else { %>
                            <div class="alert alert-success text-center mb-0">
                                <i class="fas fa-check-circle me-2"></i> This invoice is fully paid. Thank you!
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('initials/footer.ejs') %>