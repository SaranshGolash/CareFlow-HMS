<%- include('initials/header.ejs', { title: 'Secure Inbox' }) %>
<link rel="stylesheet" href="/styles/inbox.css">
</head>
<body>
    <div class="container py-5">
        <h2 class="mb-4 text-primary"><i class="fas fa-envelope-open-text me-3"></i> <%= isAdmin ? 'Admin Message Center' : 'My Secure Inbox' %></h2>
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <p class="text-muted mb-0"><%= messages.length %> <%= messages.length === 1 ? 'conversation' : 'conversations' %> found.</p>
            <a href="/new-message" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i> New Message
            </a>
        </div>

        <% if (messages.length > 0) { %>
            <div class="list-group message-list shadow-md">
                <% messages.forEach(message => { %>
                    <a href="#" class="list-group-item list-group-item-action <%= message.is_read ? '' : 'list-group-item-unread' %>">
                        <div class="d-flex w-100 justify-content-between">
                            <!-- Display sender name and subject -->
                            <h5 class="mb-1 text-truncate" style="max-width: 70%;">
                                <%= message.is_read ? '' : 'ğŸ”¥' %> 
                                <strong>
                                <% 
                                    let displayName = 'Support Team';
        
                                    if (message.sender_role === 'admin') {
                                        // Message is a reply from the Admin
                                        displayName = 'Support Team (Reply)';
                                    } else if (message.user_id === currentUserId) {
                                        // Message is from the current patient
                                        displayName = 'You';
                                    } else {
                                        // Admin View: Use the stored username (now available directly on the message object)
                                        displayName = message.sender_username || `Patient ID ${message.user_id}`;
                                    }
                                %>
                                <%= displayName %>
                                </strong>
                                : <%= message.subject %>
                            </h5>
                            <small class="text-muted"><%= new Date(message.created_at).toLocaleDateString() %></small>
                        </div>
                        <p class="mb-1 text-muted text-truncate"><%= message.message_body %></p>
                    </a>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center mt-4" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                Your inbox is currently empty.
            </div>
        <% } %>
    </div>
<%- include('initials/footer.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
