<%- include('initials/header.ejs', { title: 'Send Message' }) %>
<link rel="stylesheet" href="/styles/new_message.css">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-md">
                    <div class="card-body">
                        <h3 class="card-title mb-4 text-primary"><i class="fas fa-paper-plane me-2"></i> Send Secure Message</h3>
                        <p class="text-muted small mb-4">Your message will be sent to the clinical support team. Please do not share emergency information here.</p>

                        <form action="/new-message" method="POST" class="row g-4">
                            
                            <div class="col-12">
                                <label for="subject" class="form-label">Subject*</label>
                                <input id="subject" name="subject" type="text" class="form-control" required placeholder="Brief summary of your query">
                            </div>

                            <div class="col-12">
                                <label for="message_body" class="form-label">Message Details*</label>
                                <textarea id="message_body" name="message_body" class="form-control" rows="6" required placeholder="Type your detailed message here..."></textarea>
                            </div>

                            <div class="col-12 text-end pt-3">
                                <button type="submit" class="btn btn-primary btn-lg me-2">
                                    <i class="fas fa-paper-plane me-2"></i> Send Message
                                </button>
                                <a href="/inbox" class="btn btn-light btn-lg">
                                    <i class="fas fa-times me-2"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('initials/footer.ejs') %>