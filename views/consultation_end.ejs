<%- include('initials/header.ejs', { title: 'Consultation Complete' }) %>
<link rel="stylesheet" href="/styles/consultation_end.css">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="card feedback-card shadow-md p-5">
                    <i class="fas fa-heartbeat fa-5x text-primary mb-4"></i>
                    <h3 class="mb-3">Thank You for Your Consultation!</h3>
                    <p class="lead text-muted">Your session has successfully ended. We appreciate you choosing CareFlow HMS for your virtual health needs.</p>
                    
                    <hr class="my-4">

                    <p class="h5 mb-4 text-dark">Please take a moment to rate your experience:</p>
                    
                    <div class="rating-stars mb-4">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="far fa-star"></i>
                    </div>

                    <form action="/appointments" method="GET" class="text-start">
                        
                        <div class="mb-3">
                            <label class="form-label text-muted">Was the consultation effective?</label>
                            <div class="d-flex justify-content-center gap-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="feedback_effectiveness" id="effectiveYes" value="yes" checked>
                                    <label class="form-check-label" for="effectiveYes">Yes</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="feedback_effectiveness" id="effectiveNo" value="no">
                                    <label class="form-check-label" for="effectiveNo">No</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="comments" class="form-label text-muted">Any additional comments? (Optional)</label>
                            <textarea class="form-control" id="comments" rows="3" placeholder="Provide feedback to help us improve..."></textarea>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check-circle me-2"></i> Submit Feedback & Finish
                            </button>
                            <a href="/appointments" class="btn btn-outline-secondary">Skip Feedback</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<%- include('initials/footer.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>