<%- include('initials/header.ejs', { title: 'Wallet & Payments' }) %>
<link rel="stylesheet" href="/styles/wallet.css">
    <div class="container py-5">
        <h2 class="mb-4 text-primary"><i class="fas fa-wallet me-3"></i> Wallet Management</h2>

        <% if (!isAdmin) { %>
            <div class="row g-4">
                
                <div class="col-lg-12 mb-4">
                    <div class="card shadow-md balance-card">
                        <div class="card-body d-flex justify-content-center align-items-center gap-4">
                            <i class="fas fa-money-check-alt fa-3x text-primary"></i>
                            <div class="text-start">
                                <p class="text-uppercase text-muted mb-0">Current Wallet Balance</p>
                                <h1 class="fw-bold text-success display-5">$<%= user.wallet_balance.toFixed(2) %></h1>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card shadow-md h-100 deposit-card">
                        <div class="card-header bg-light fw-bold text-dark">
                            <i class="fas fa-arrow-circle-up me-1 text-success"></i> Add Funds (Deposit)
                        </div>
                        <div class="card-body">
                            <form action="/wallet/deposit" method="POST" class="row g-3">
                                <div class="col-md-12">
                                    <label for="deposit_amount" class="form-label">Deposit Amount</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" id="deposit_amount" name="deposit_amount" class="form-control" 
                                               value="50.00" min="5.00" step="0.01" required>
                                    </div>
                                </div>
                                <div class="col-12 mt-4">
                                    <button type="submit" class="btn btn-primary w-100">
                                        Confirm Deposit
                                    </button>
                                </div>
                            </form>
                            <div class="alert alert-info small mt-3 mb-0">
                                <i class="fas fa-info-circle me-1"></i> Funds are added via mock transaction.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card shadow-md h-100 withdraw-card">
                        <div class="card-header bg-light fw-bold text-dark">
                            <i class="fas fa-arrow-circle-down me-1 text-danger"></i> Withdraw Funds
                        </div>
                        <div class="card-body">
                            <form action="/wallet/withdraw" method="POST" class="row g-3">
                                <div class="col-md-12">
                                    <label for="withdraw_amount" class="form-label">Withdraw Amount</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" id="withdraw_amount" name="withdraw_amount" class="form-control" 
                                               value="10.00" min="0.01" step="0.01" max="<%= user.wallet_balance.toFixed(2) %>" required>
                                    </div>
                                </div>
                                <div class="col-12 mt-4">
                                    <button type="submit" class="btn btn-danger w-100" 
                                            <% if (user.wallet_balance <= 0) { %> disabled <% } %>>
                                        Confirm Withdrawal
                                    </button>
                                </div>
                            </form>
                            <div class="alert alert-warning small mt-3 mb-0">
                                <i class="fas fa-exclamation-triangle me-1"></i> Withdrawal is a mock transaction.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <h4 class="mt-5 mb-3 text-dark">Recent Transactions</h4>
            <div class="table-responsive transaction-table shadow-md">
                <% if (transactions && transactions.length > 0) { %>
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th class="text-end">Amount</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% transactions.forEach(t => { %>
                                <% const isDebit = t.amount < 0 || t.transaction_type === 'Payment'; %>
                                <tr class="<%= isDebit ? 'text-danger' : 'text-success' %>">
                                    <td><%= new Date(t.created_at).toLocaleString() %></td>
                                    <td><%= t.transaction_type %></td>
                                    <td class="text-end fw-bold"><%= isDebit ? '-' : '+' %> $<%= Math.abs(t.amount).toFixed(2) %></td>
                                    <td><%= t.description || 'N/A' %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p class="alert alert-warning text-center m-3">No recent transactions found.</p>
                <% } %>
            </div>

        <% } else { %>
            <% } %>
    </div>
<%- include('initials/footer.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>