<%- include('initials/header.ejs', { title: 'Wallet & Payments' }) %>
<link rel="stylesheet" href="/styles/wallet.css">
    <div class="container py-5">
        <h2 class="mb-4 text-primary"><i class="fas fa-wallet me-3"></i> Wallet Management</h2>

        <% if (!isAdmin) { %>
            <div class="row g-4">
                <div class="col-lg-5">
                    <div class="card shadow-md h-100 balance-card">
                        <div class="card-body text-center">
                            <i class="fas fa-money-check-alt fa-4x text-primary mb-3"></i>
                            <p class="text-uppercase text-muted mb-0">Current Wallet Balance</p>
                            <h1 class="fw-bold text-success display-4">$<%= user.wallet_balance.toFixed(2) %></h1>
                            <p class="text-muted small">Your prepaid balance for faster payments.</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-7">
                    <div class="card shadow-md h-100 deposit-card">
                        <div class="card-header bg-light fw-bold text-dark">
                            Add Money to Wallet (Mock Payment)
                        </div>
                        <div class="card-body">
                            <form action="/wallet/deposit" method="POST" class="row g-3">
                                <div class="col-md-8">
                                    <label for="deposit_amount" class="form-label">Deposit Amount</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" id="deposit_amount" name="deposit_amount" class="form-control" 
                                               value="50.00" min="5.00" step="0.01" required>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fas fa-arrow-circle-up me-1"></i> Deposit
                                    </button>
                                </div>
                            </form>
                            <div class="alert alert-info small mt-3 mb-0">
                                <i class="fas fa-info-circle me-1"></i> This is a mock transaction for project demonstration.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <h4 class="mt-5 mb-3 text-dark">Recent Transactions</h4>
            <div class="table-responsive transaction-table shadow-md">
                <% if (transactions && transactions.length > 0) { %>
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th class="text-end">Amount</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% transactions.forEach(t => { %>
                                <% const isDebit = t.amount < 0 || t.transaction_type === 'Payment'; %>
                                <tr class="<%= isDebit ? 'text-danger' : 'text-success' %>">
                                    <td><%= new Date(t.created_at).toLocaleString() %></td>
                                    <td><%= t.transaction_type %></td>
                                    <td class="text-end fw-bold"><%= isDebit ? '-' : '+' %> $<%= Math.abs(t.amount).toFixed(2) %></td>
                                    <td><%= t.description || 'N/A' %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p class="alert alert-warning text-center m-3">No recent transactions found.</p>
                <% } %>
            </div>

        <% } else { %>
            <div class="alert alert-info mb-4">
                <i class="fas fa-user-shield me-2"></i> As an Admin, you can view patient balances and make adjustments for legal/system issues only.
            </div>

            <h4 class="mt-4 mb-3 text-dark">Manual Balance Adjustment</h4>
            <div class="card shadow-md mb-5">
                <div class="card-body">
                    <form action="/admin/wallet/adjust" method="POST" class="row g-3">
                        <div class="col-md-4">
                            <label for="patient_id" class="form-label">Patient*</label>
                            <select id="patient_id" name="patient_id" class="form-select form-control" required>
                                <option value="" disabled selected>Select Patient</option>
                                <% usersData.forEach(u => { %>
                                    <option value="<%= u.id %>"><%= u.username %> ($<%= u.wallet_balance.toFixed(2) %>)</option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="adjustment_amount" class="form-label">Amount</label>
                            <input type="number" id="adjustment_amount" name="adjustment_amount" class="form-control" step="0.01" min="0.01" required placeholder="100.00">
                        </div>
                        <div class="col-md-3">
                            <label for="action_type" class="form-label">Action</label>
                            <select id="action_type" name="action_type" class="form-select form-control" required>
                                <option value="add">Add (+)</option>
                                <option value="subtract">Subtract (-)</option>
                            </select>
                        </div>
                         <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-warning w-100">Adjust</button>
                        </div>
                        <div class="col-12">
                            <label for="adjustment_reason" class="form-label">Reason for Adjustment*</label>
                            <input type="text" id="adjustment_reason" name="adjustment_reason" class="form-control" required placeholder="e.g., Refund for double payment, system error correction">
                        </div>
                    </form>
                </div>
            </div>

            <h4 class="mt-4 mb-3 text-dark">All Patient Balances</h4>
            <div class="table-responsive transaction-table shadow-md">
                 <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th class="text-end">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% usersData.forEach(u => { %>
                            <tr class="<%= u.wallet_balance < 0 ? 'text-danger' : '' %>">
                                <td><%= u.id %></td>
                                <td><%= u.username %></td>
                                <td><%= u.email %></td>
                                <td class="text-end fw-bold">$<%= u.wallet_balance.toFixed(2) %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

        <% } %>
    </div>
<%- include('initials/footer.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>